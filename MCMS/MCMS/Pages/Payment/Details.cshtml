<h2>Details</h2>

<div>
    <h4>Payments</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Payments.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Payments.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Payments.Amount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Payments.Amount)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Payments.PaidAt)
        </dt>
        <dd>
