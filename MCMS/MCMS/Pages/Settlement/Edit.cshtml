@page
@model MCMS.Pages.Settlement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Settlements</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Settlements.Id" />
            <div class="form-group">
                <label asp-for="Settlements.ClinicId" class="control-label"></label>
                <select asp-for="Settlements.ClinicId" class="form-control" asp-items="ViewBag.ClinicId"></select>
                <span asp-validation-for="Settlements.ClinicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Settlements.DoctorId" class="control-label"></label>
                <select asp-for="Settlements.DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="Settlements.DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Settlements.Amount" class="control-label"></label>
                <input asp-for="Settlements.Amount" class="form-control" />
                <span asp-validation-for="Settlements.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Settlements.PayedAt" class="control-label"></label>
                <input asp-for="Settlements.PayedAt" class="form-control" />
                <span asp-validation-for="Settlements.PayedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
